<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gorusel_odevi2.Kaydol"
             Title="kaydol"
              BackgroundColor="Tan">
    <VerticalStackLayout Padding="20">
        <Label Text="Kayıt Ol" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="EmailEntry" Placeholder="E-posta" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Şifre" IsPassword="True" />
        <Button Text="Kayıt Ol" Clicked="OnRegisterClicked" />
        <Label Text="Zaten bir hesabım var" TextColor="Cyan" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnLabelTapped"  />
        </Label.GestureRecognizers>

        </VerticalStackLayout>
</ContentPage>